auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet manual

auto br0
iface br0 inet static
        address <%= @address %>
        netmask <%= @netmask %>
        network <%= @network %>
        broadcast <%= @broadcast %>
        gateway <%= @gateway %>
        bridge_ports <%= @interface %>
        bridge_stp off
        bridge_fd 0
        bridge_maxwait 0
        dns-nameservers <%= @dns %>